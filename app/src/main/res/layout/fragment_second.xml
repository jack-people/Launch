<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/appRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <ImageView
            android:id="@+id/appIconImageView"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/appNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="16dp"
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="190dp">

        <ImageView
            android:id="@+id/weixinIcon"
            android:layout_width="165dp"
            android:layout_height="165dp"
            android:background="@mipmap/weixin"
            android:scaleType="fitStart"
            android:layout_marginStart="15dp"
            tools:ignore="speakableTextPresentCheck" />

        <ImageButton
            android:layout_width="165dp"
            android:layout_height="165dp"
            android:scaleType="fitStart"
            android:background="@mipmap/zhifubao"
            android:layout_marginStart="10dp"
            tools:ignore="SpeakableTextPresentCheck">
        </ImageButton>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="260dp">

        <Button
            android:id="@+id/downloadWeChat"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@mipmap/downloasdicon"
            android:scaleType="fitStart"
            android:layout_marginStart="140dp"
            tools:ignore="SpeakableTextPresentCheck"
            style="?android:attr/buttonBarButtonStyle" />


        <Button
            android:id="@+id/downloadalipay"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="fitStart"
            android:background="@mipmap/downloasdicon"
            android:layout_marginStart="155dp"
            tools:ignore="SpeakableTextPresentCheck"
            android:layout_marginLeft="130dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="370dp">

        <ImageButton
            android:layout_width="165dp"
            android:layout_height="165dp"
            android:background="@mipmap/tiktok"
            android:scaleType="fitStart"
            android:layout_marginStart="15dp"
            tools:ignore="SpeakableTextPresentCheck">
        </ImageButton>

        <ImageButton
            android:layout_width="165dp"
            android:layout_height="165dp"
            android:scaleType="fitStart"
            android:background="@mipmap/xiguashipin"
            android:layout_marginStart="15dp"
            tools:ignore="SpeakableTextPresentCheck"
            android:layout_marginLeft="10dp">
        </ImageButton>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="440dp">

        <Button
            android:id="@+id/douyin"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@mipmap/downloasdicon"
            android:scaleType="fitStart"
            android:layout_marginStart="140dp"
            tools:ignore="SpeakableTextPresentCheck"
            android:layout_marginLeft="120dp"/>


        <Button
            android:id="@+id/xiguashiping"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="fitStart"
            android:background="@mipmap/downloasdicon"
            android:layout_marginStart="155dp"
            tools:ignore="SpeakableTextPresentCheck"
            android:layout_marginLeft="130dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="550dp">

        <ImageButton
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@mipmap/paymentcode"
            android:scaleType="fitStart"
            android:layout_marginStart="20dp"
            tools:ignore="SpeakableTextPresentCheck"
            android:layout_marginLeft="20dp">
        </ImageButton>

        <ImageButton
            android:id="@+id/camera"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:scaleType="fitStart"
            android:background="@mipmap/camera"
            android:layout_marginStart="20dp"
            tools:ignore="SpeakableTextPresentCheck"
            android:layout_marginLeft="20sp">
        </ImageButton>

        <ImageButton
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@mipmap/scan"
            android:scaleType="fitStart"
            android:layout_marginStart="20sp"
            tools:ignore="SpeakableTextPresentCheck"
            android:layout_marginLeft="20sp">
        </ImageButton>

    </LinearLayout>

